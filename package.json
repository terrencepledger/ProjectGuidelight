{
  "name": "guidelight",
  "version": "1.1.2",
  "description": "Church presentation control system for Greater Pentecostal Temple",
  "main": "main.js",
  "scripts": {
    "start": "electronmon .",
    "build": "electron-builder --win portable"
  },
  "keywords": [],
  "author": "Greater Pentecostal Temple",
  "license": "ISC",
  "devDependencies": {
    "electron": "^37.0.0",
    "electron-builder": "^25.1.8",
    "electronmon": "^2.0.4"
  },
  "dependencies": {
    "dotenv": "^16.4.5"
  },
  "build": {
    "appId": "com.gpt.guidelight",
    "productName": "Guidelight",
    "directories": {
      "output": "dist2"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "src/**/*",
      "assets/**/*",
      "!**/.env",
      "!**/.env.example",
      "!**/FUTURE_WORK.md"
    ],
    "win": {
      "target": "portable",
      "signAndEditExecutable": false,
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "Guidelight.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "terrencepledger",
      "repo": "ProjectGuidelight"
    }
  }
}
